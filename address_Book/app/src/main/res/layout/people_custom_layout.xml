<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgPeople_custom"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxWidth="@android:dimen/app_icon_size"
            android:maxHeight="@android:dimen/app_icon_size"
            android:adjustViewBounds="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_defaultpeople"
            />

        <TextView
            android:id="@+id/tv_name_custom"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginRight="30dp"
            />

        <ImageView
            android:id="@+id/imgFavorite_custom"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_nonfavorite"
            />

        <ImageView
            android:id="@+id/imgEmg_custom"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:adjustViewBounds="true"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_nonemg2"
            />
</LinearLayout>
